{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es2020",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}