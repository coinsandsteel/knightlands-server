{
  "name": "knightlands-server",
  "description": "Knightlands backend",
  "version": "1.0.0",
  "main": "server,js",
  "esm": {
    "force": true
  },
  "nodemonConfig": {
    "ignore": [
      "public",
      "README.md",
      "Dockerfile",
      "*.log",
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "delay": "1000",
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "js,ts"
  },
  "dependencies": {
    "@magic-sdk/admin": "^1.3.0",
    "@types/node": "^13.9.5",
    "binary-search": "^1.3.5",
    "binary-search-bounds": "^2.0.4",
    "connect": "3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "ethers": "^5.4.1",
    "express": "4.16.3",
    "lodash": "^4.17.15",
    "lodash.clonedeep": "^4.5.0",
    "lodash.difference": "^4.5.0",
    "long-timeout": "^0.1.1",
    "minimist": "1.1.0",
    "mongodb": "^4.0.1",
    "morgan": "1.7.0",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-magic": "^1.0.0",
    "random-js": "^2.1.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^6.0.1",
    "serve-static": "1.13.2",
    "socketcluster": "^14.1.1",
    "socketcluster-client": "^14.0.0",
    "tinyqueue": "^2.0.3",
    "tronweb": "^4.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "uuid": "^3.3.2",
    "web3-utils": "^1.2.6"
  },
  "keywords": [
    "websocket",
    "server",
    "realtime",
    "cluster",
    "scalable"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "build": "tsc",
    "start:watch": "nodemon",
    "start": "node -r esm -r ts-node/register ./src/server.js --inspect-workers 5999",
    "start:dev": "env NODE_ENV=dev node -r esm server.js",
    "start:local": "env NODE_ENV=local node -r esm server.js",
    "debug": "node -r esm server.js --inspect-workers 5999",
    "start:docker": "node dockerwait.js && node ${SOCKETCLUSTER_MASTER_CONTROLLER:-server.js}"
  }
}
